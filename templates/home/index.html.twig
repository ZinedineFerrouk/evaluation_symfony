{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
<div class="container">
	<h1 class="my-5">Bienvenue sur Find your Restau</h1>

	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Nom du Restaurant</th>
				<th scope="col">Ville</th>
				<th scope="col">Proprietaire</th>
			</tr>
		</thead>
		<tbody>
			{% for resto in restaurants %}
			<tr>
				<th scope="row">
					{{ resto.id }}
				</th>
				<td><a href=" {{ path('resto_details', {name: resto.name}) }} ">{{ resto.name }}</a></td>
				<td>
					<a href=" {{ path('ville_details', {name: resto.ville.name}) }} ">{{ resto.ville.name }}</a>
				</td>
				<td>
					<a href=" {{ path('proprio_details', {name: resto.proprietaire.name}) }} ">{{
						resto.proprietaire.name }},
						{{ resto.proprietaire.firstName }}</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}